@model Nogupe.Web.Models.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">

    <form method="post" asp-controller="Account" asp-action="Login" class="form-signin" style="width:100%; max-width:330px; padding:15px; margin:auto; text-align:center">
        <h3 class="h3 mb-3 font-weight-normal">Please sign in</h3>
        <partial name="_ValidationSummary" />
        <div class="form-group">
            <input class="form-control" name="username" type="text" value="" asp-for="Username" placeholder="Username">
        </div>
        <div class="form-group">
            <input class="form-control" name="password" type="password" value="" asp-for="Password" placeholder="Password">
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        <a class="btn-link mt-1" asp-controller="Account" asp-action="Register">Registrarse</a>
    </form>
</div>
