@model CareerViewModel

<form name="editForm" id="editForm" asp-controller="Career" asp-action="Edit">
    <div class="modal-header">
        <h3 class="modal-title text-center" id="modalLabel">Editar Carrera</h3>
        <button id="btnModal" type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">

        <partial name="_ValidationSummary" />

        <input type="hidden" name="id" asp-for="Id" />

        <div class="form-group">
            <label for="name">Nombre</label>
            <input class="form-control" asp-for="Name" name="name" type="text" placeholder="Nombre" required />
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" onclick="EditFormCareer()" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
</form>