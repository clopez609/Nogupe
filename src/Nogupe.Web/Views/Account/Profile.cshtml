@model ProfileViewModel

@{
    ViewData["Title"] = "Perfil";
}

<form method="post" asp-controller="Account" asp-action="Profile" class="form-signin" style="width:100%; max-width:400px; padding:15px; margin:auto;">

    <h3 class="h3 mb-3 font-weight-normal text-center">Datos de Usuario</h3>

    <partial name="_ValidationSummary" />

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, "Nombre")
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", tabindex = "1" })
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, "Apellido")
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", tabindex = "2" })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "Correo Electronico")
        @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", tabindex = "3" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.Password, "Nueva Contraseña")
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", tabindex = "4" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, "Confirmar Contraseña")
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", tabindex = "5" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>*@

    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-block mt-1">Volver</a>

</form>

@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); };

    <script type="text/javascript">

        $(document).ready(function () {

        });

    </script>
}