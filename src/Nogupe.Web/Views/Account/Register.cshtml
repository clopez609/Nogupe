@model Nogupe.Web.Models.Auth.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <form method="post" asp-controller="Account" asp-action="Register" class="form-signin" style="width:100%; max-width:330px; padding:15px; margin:auto; text-align:center">

        <h3 class="h3 mb-3 font-weight-normal">Please register</h3>
        <partial name="_ValidationSummary" />
        <div class="form-group">
            <input class="form-control" name="username" type="text" value="" asp-for="UserName" placeholder="Username">
        </div>

        <div class="form-group">
            <input class="form-control" name="firstname" type="text" value="" asp-for="FirstName" placeholder="Firstname">
        </div>

        <div class="form-group">
            <input class="form-control" name="lastname" type="text" value="" asp-for="LastName" placeholder="Lastname">
        </div>

        <div class="form-group">
            <input class="form-control" name="email" type="email" value="" asp-for="Email" placeholder="Email">
        </div>

        <div class="form-group">
            <input class="form-control" name="password" type="password" value="" asp-for="Password" placeholder="Password">
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>

    </form>
</div>

